# AWS Configuration (for production deployment)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# DynamoDB Table Names
# For production deployment
DYNAMODB_POSTS_TABLE=rtk-query-demo-cloud-prod-posts
DYNAMODB_USERS_TABLE=rtk-query-demo-cloud-prod-users

# For local development with serverless offline
# DYNAMODB_POSTS_TABLE=rtk-query-demo-cloud-dev-posts
# DYNAMODB_USERS_TABLE=rtk-query-demo-cloud-dev-users

# Environment
NODE_ENV=production

# Local Development Settings
# Uncomment the following for local development with DynamoDB Local
# IS_OFFLINE=true
# NODE_ENV=development